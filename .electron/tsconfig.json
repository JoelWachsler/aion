{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*",
      ],
      "@/*": [
        "./*",
      ],
    },
    "types": [
      "@types/node",
      "@types/jest",
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "out",
  ],
}