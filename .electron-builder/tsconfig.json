{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*",
      ],
      "@/*": [
        "./*",
      ],
    },
    "types": [
      "@nuxt/types",
      "@types/node",
      "vuetify",
      "@types/jest",
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "out",
  ],
}